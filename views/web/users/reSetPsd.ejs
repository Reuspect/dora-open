<!-- BEGIN CONTAINER -->
<div class="container margin-bottom-40">
    <div class="row">
        <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3 login-signup-page">
            <form  name="reSetForm" ng-submit="processReSetForm(reSetForm.$valid)" novalidate>

                <h2>密码重置</h2>
                <div class="alert alert-danger" role="alert" id="reSetInfo"><i class="fa fa-exclamation-triangle"></i>&nbsp;非法操作，请重试</div>
                <input type="hidden" value="<%= uid%>" id="reSetUserId"/>
                <div class="input-group margin-bottom-20" ng-class="{ 'has-error' : reSetForm.userName.$invalid && !reSetForm.userName.$pristine }">
                    <span class="input-group-addon"><i class="fa fa-user"></i></span>
                    <input type="text" class="form-control" name="userName" ng-model="reSetFormData.userName" placeholder="请填写用户名" ng-pattern="/^[a-zA-Z][a-zA-Z0-9_]{4,11}$/" required title="5-12个英文字符">
                </div>
                <div class="input-group margin-bottom-20" ng-class="{ 'has-error' : reSetForm.password.$invalid && !reSetForm.password.$pristine }">
                    <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                    <input type="password" class="form-control" id="userPassword" name="password" ng-model="reSetFormData.password" ng-minlength="6" ng-maxlength="12" ng-pattern="/^[x00-x7f]+$/" placeholder="请输入密码" required title="6-12个asicc字符">
                </div>
                <div class="input-group margin-bottom-20" ng-class="{ 'has-error' : reSetForm.confirmPassword.$invalid && !reSetForm.confirmPassword.$pristine }">
                    <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                    <input type="password" class="form-control" pw-check="userPassword" name="confirmPassword" ng-model="reSetFormData.confirmPassword" placeholder="请再次输入密码" ng-minlength="6" ng-maxlength="12" ng-pattern="/^[x00-x7f]+$/" required>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <button type="submit" class="btn theme-btn pull-right" ng-disabled="reSetForm.$invalid">重置</button>
                    </div>
                </div>

            </form>
        </div>
    </div>
</div>