<!-- BEGIN CONTAINER -->
<div class="container margin-bottom-40 min-hight">
    <!-- BEGIN BREADCRUMBS -->
    <div class="row">
        <div class="container">
            <div class="col-md-9 col-sm-9">
                <ul class="pull-left breadcrumb">
                    <li><a href='/'>首页</a></li>
                    <li>用户注册</li>
                </ul>
            </div>
        </div>
    </div>
    <!-- END BREADCRUMBS -->
    <div class="row">
        <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3 login-signup-page">
            <form  name="regForm" ng-submit="processRegForm(regForm.$valid)" novalidate>

                <h2>用户注册</h2>
                <div class="alert alert-danger hide" role="alert" id="regInfo"><i class="fa fa-exclamation-triangle"></i>&nbsp;<span id="errMsg"></span></div>
                <div class="input-group margin-bottom-20" ng-class="{ 'has-error' : regForm.userName.$invalid && !regForm.userName.$pristine }">
                    <span class="input-group-addon"><i class="fa fa-user"></i></span>
                    <input type="text" class="form-control" name="userName" ng-model="regFormData.userName" placeholder="请填写用户名" ng-pattern="/^[a-zA-Z][a-zA-Z0-9_]{4,11}$/" required title="5-12个英文字符"/>
                </div>

                <div class="input-group margin-bottom-20" ng-class="{ 'has-error' : regForm.email.$invalid && !regForm.email.$pristine }">
                    <span class="input-group-addon"><i class="fa fa-envelope"></i></span>
                    <input type="email" name="email" class="form-control" ng-model="regFormData.email" placeholder="请填写email" required>
                </div>
                <div class="input-group margin-bottom-20" ng-class="{ 'has-error' : regForm.password.$invalid && !regForm.password.$pristine }">
                    <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                    <input type="password" class="form-control" id="userPassword" name="password" ng-model="regFormData.password" ng-minlength="6" ng-maxlength="12" ng-pattern="/(?!^\\d+$)(?!^[a-zA-Z]+$)(?!^[_#@]+$).{6,}/" placeholder="请输入密码" required title="6-12个有效字符">
                </div>
                <div class="input-group margin-bottom-20" ng-class="{ 'has-error' : regForm.confirmPassword.$invalid && !regForm.confirmPassword.$pristine }">
                    <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                    <input type="password" class="form-control" pw-check="userPassword" name="confirmPassword" ng-model="regFormData.confirmPassword" placeholder="请再次输入密码" ng-minlength="6" ng-maxlength="12" ng-pattern="/(?!^\\d+$)(?!^[a-zA-Z]+$)(?!^[_#@]+$).{6,}/" required>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <button type="submit" class="btn theme-btn pull-right" ng-disabled="regForm.$invalid">注册</button>
                    </div>
                </div>


            </form>
        </div>
    </div>
</div>